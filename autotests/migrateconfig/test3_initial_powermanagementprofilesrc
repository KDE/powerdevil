[AC]
icon=battery-charging

[AC][DimDisplay]
idleTime=300000

[AC][KeyboardBrightnessControl]
value=25

[AC][RunScript]
idleTime=120000
scriptCommand=kdialog --passivepopup "Don't be so idle! Love, - custom script" 5
scriptPhase=2

[Battery]
icon=battery-060

[Battery][BrightnessControl]
value=55

[Battery][DPMSControl]
idleTime=600
idleTimeoutWhenLocked=120
lockBeforeTurnOff=1

[Battery][DimDisplay]
idleTime=150000

[Battery][HandleButtonEvents]
lidAction=4
powerButtonAction=2
powerDownAction=8
triggerLidActionWhenExternalMonitorPresent=true

[Battery][RunScript]
idleTime=600000
scriptCommand=kdialog --passivepopup "On Battery! Love, - custom script" 5
scriptPhase=0

[Battery][SuspendSession]
idleTime=900000
suspendThenHibernate=true
suspendType=1

[LowBattery]
icon=battery-low

[LowBattery][BrightnessControl]
value=30

[LowBattery][DPMSControl]
idleTime=120
idleTimeoutWhenLocked=60
lockBeforeTurnOff=0

[LowBattery][DimDisplay]
idleTime=60000

[LowBattery][HandleButtonEvents]
lidAction=1
powerButtonAction=16
powerDownAction=16
triggerLidActionWhenExternalMonitorPresent=false

[LowBattery][PowerProfile]
profile=power-saver

[LowBattery][RunScript]
idleTime=600000
scriptCommand=kdialog --passivepopup "Out of the woods! Love, - custom script" 5
scriptPhase=1

[LowBattery][SuspendSession]
idleTime=420000
suspendThenHibernate=false
suspendType=4
