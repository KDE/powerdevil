[AC][Display]
TurnOffDisplayWhenIdle=false

[AC][Keyboard]
KeyboardBrightness=25
UseProfileSpecificKeyboardBrightness=true

[AC][RunScript]
IdleTimeoutCommand=kdialog --passivepopup "Don't be so idle! Love, - custom script" 5
RunScriptIdleTimeoutSec=120

[AC][SuspendAndShutdown]
AutoSuspendAction=0
LidAction=0
PowerButtonAction=0
PowerDownAction=0

[Battery][Display]
DimDisplayIdleTimeoutSec=150
DisplayBrightness=55
LockBeforeTurnOffDisplay=true
TurnOffDisplayIdleTimeoutSec=600
TurnOffDisplayIdleTimeoutWhenLockedSec=120
UseProfileSpecificDisplayBrightness=true

[Battery][RunScript]
ProfileLoadCommand=kdialog --passivepopup "On Battery! Love, - custom script" 5

[Battery][SuspendAndShutdown]
